{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["nextjs"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "eqeqeq": "error"
  },
  "overrides": [
    {
      "files": ["src/lib/db/seed.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/app/api/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/lib/classification/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/lib/recurring/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": ["node_modules", ".next", "scraper"]
}
